<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitButton"
            tools:layout_editor_absoluteY="630dp" tools:layout_editor_absoluteX="130dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText"
            tools:layout_editor_absoluteY="512dp" tools:layout_editor_absoluteX="74dp"/>
    <ImageView
            android:src="@drawable/ic_launcher_background"
            android:layout_width="354dp"
            android:layout_height="278dp"
            android:id="@+id/imageView" tools:visibility="visible"
            tools:layout_editor_absoluteY="133dp" tools:layout_editor_absoluteX="19dp"/>
    <Button
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            tools:layout_editor_absoluteY="630dp" tools:layout_editor_absoluteX="16dp"/>
    <Button
            android:text="forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forward"
            tools:layout_editor_absoluteY="630dp" tools:layout_editor_absoluteX="265dp"/>
    <Button
            android:text="See More Like This"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="38dp"
            tools:layout_editor_absoluteX="104dp" android:id="@+id/button"/>

</android.support.constraint.ConstraintLayout>